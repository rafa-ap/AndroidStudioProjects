<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundTint="#000000">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="50dp"
        android:text="Nombre: "
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/nombreEditText"
        app:layout_constraintEnd_toStartOf="@+id/nombreEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nombreEditText" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marca:"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/marcaEditText"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/marcaEditText" />

    <EditText
        android:id="@+id/nombreEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:ems="8"
        android:inputType="textAutoCorrect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloCrearProyecto" />

    <EditText
        android:id="@+id/marcaEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="8"
        android:inputType="textAutoCorrect"
        app:layout_constraintEnd_toEndOf="@+id/nombreEditText"
        app:layout_constraintStart_toStartOf="@+id/nombreEditText"
        app:layout_constraintTop_toBottomOf="@+id/nombreEditText" />

    <EditText
        android:id="@+id/direccionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="8"
        android:inputType="textAutoCorrect"
        app:layout_constraintEnd_toEndOf="@+id/marcaEditText"
        app:layout_constraintStart_toStartOf="@+id/marcaEditText"
        app:layout_constraintTop_toBottomOf="@+id/marcaEditText" />

    <EditText
        android:id="@+id/canalesEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="8"
        android:inputType="textAutoCorrect"
        app:layout_constraintEnd_toEndOf="@+id/direccionEditText"
        app:layout_constraintStart_toStartOf="@+id/direccionEditText"
        app:layout_constraintTop_toBottomOf="@+id/direccionEditText" />

    <EditText
        android:id="@+id/dmxEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:ems="8"
        android:inputType="textAutoCorrect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/canalesEditText"
        app:layout_constraintStart_toStartOf="@+id/canalesEditText"
        app:layout_constraintTop_toBottomOf="@+id/canalesEditText" />

    <TextView
        android:id="@+id/tituloCrearProyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rellena los datos del nuevo foco:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DirecciÃ³n:"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/direccionEditText"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/direccionEditText" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canales: "
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/canalesEditText"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/canalesEditText" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DMX: "
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dmxEditText"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/dmxEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>